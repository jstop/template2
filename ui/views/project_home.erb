                      <% end %>
                      <a href="/view_user/<%= routine.user_id %>"><%= MmUser.find(routine.user_id) %></p></a>
                      <a class="btn"  href="/view_routine/<%= routine.id %>">View</a></span>
                        <form action='/routine/<%=routine.id %>' method='post'>
                          <input type="hidden" name="_method" value="delete">  
                          <input type='submit' value='Delete'>
                        </form>
                        -->
                    </div>
                  </div>
                </li>
              </a>
  <% end %>
            </div><!--/row-->
